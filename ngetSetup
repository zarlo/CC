local response = http.get(
        "https://raw.githubusercontent.com/zarlo/CC/master/nget"
)

if response then
    local sResponse = response.readAll()
    response.close()
    local file = fs.open( "nget", "w" )
    file.write( sResponse )
    file.close()
else
    printError( "Failed." )
    return
end

local response = http.get(
        "https://raw.githubusercontent.com/zarlo/CC/master/repositories.list"
)

if response then
    local sResponse = response.readAll()
    response.close()
    local file = fs.open( "repositories.list", "w" )
    file.write( sResponse )
    file.close()
else
    printError( "Failed." )
    return
end
